.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icon
        %li
          = link_to new_group_path(current_user), class: "top-items__icon__left-icon" do
            %i.fas.fa-edit
        %li 
          = link_to edit_user_path(current_user), class: "top-items__icon__right-icon" do
            %i.fas.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-bar__group-list__contents
          %p.side-bar__group-list__contents__name
            = group.name
          %p.side-bar__group-list__contents__text
            = group.show_last_message