.chat-main__list__message{data: {message: {id: message.id}}}
  .chat-main__list__message__name
    = message.user.name
    .chat-main__list__message__name__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__list__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?