.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-contents
      %h2.chat-main__group-info__left-contents__name
        = @group.name
      %ul.chat-main__group-info__left-contents__member
        Memberï¼š
        %li.chat-main__group-info__left-contents__member__list
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group), class: "chat-main__group-info__right-contents" do
      .chat-main__group-info__right-contents__btn
        Edit
  .chat-main__list
    = render @messages
      
  .chat-main__form
    .chat-main__form__contents
      = form_for [@group, @message] do |f|
        .form-type
          = f.text_field :content, class: 'form-type__text', placeholder: 'type a message'
          = f.label :image, class: 'form-type__icon' do
            %i.fas.fa-image
            = f.file_field :image
        = f.submit 'Send', class: 'form-btn'